{
  "name": "gcharts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "dependencies": {
    "parcel": "^1.11.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.13",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "jest-canvas-mock": "^1.1.1-beta.1",
    "jest-css-modules": "^1.1.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "typescript": "^3.2.4"
  },
  "scripts": {
    "dev": "parcel index.html",
    "build": "rimraf dist && parcel build index.html",
    "lint": "yarn _typeCheck && yarn _tsLint",
    "testCoverage": "jest --coverage",
    "testLive": "jest --coverage && live-server ./coverage/lcov-report ",
    "test": "jest",
    "_typeCheck": "tsc --project tsconfig.json --noEmit",
    "_tsLint": "tslint -p ./tsconfig.json ./src/**/*.{ts,tsx}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn lint"
    }
  },
  "jest": {
    "collectCoverage": false,
    "collectCoverageFrom": [
      "**/src/**/*.{ts,tsx}",
      "**/test/**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ],
    "setupFiles": [
      "jest-canvas-mock"
    ],
    "testRegex": "\\.(test|spec)\\.(ts|tsx|jsx|js)$",
    "moduleNameMapper": {
      "\\.(less|scss|css|jpg|png|svg)$": "jest-css-modules"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "babelConfig": false
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guzhongren/gcharts.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/guzhongren/gcharts/issues"
  },
  "homepage": "https://github.com/guzhongren/gcharts#readme"
}
